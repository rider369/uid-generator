<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

    <!-- UID generator -->
    <bean id="disposableWorkerIdAssigner" class="com.baidu.fsg.uid.worker.DisposableWorkerIdAssigner"/>
    <bean id="hostPortWorkerIdAssigner" class="com.baidu.fsg.uid.worker.HostPortWorkerIdAssigner" />

    <bean id="defaultUidGenerator" class="com.baidu.fsg.uid.impl.DefaultUidGenerator" lazy-init="false">
        <property name="workerIdAssigner" ref="hostPortWorkerIdAssigner"/>

        <!-- Specified bits & epoch as your demand. No specified the default value will be used -->
        <property name="timeBits" value="32"/>
        <property name="workerBits" value="18"/>
        <property name="seqBits" value="13"/>
        <property name="epochStr" value="2025-01-01"/>
    </bean>

    <!-- Import mybatis config -->
    <import resource="classpath:/uid/mybatis-spring.xml"/>

</beans>
